---
import Card from "@/components/shared/Card.astro";

interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<Card>
  <div class="w-full h-auto aspect-[4/3] rounded-lg bg-neutral-200">
    <img src={image} alt={title} class="w-full h-full object-cover aspect-[4/3] rounded-lg" />
  </div>
  <div class="space-y-2">
    <h3 class="text-primary font-bold text-xl">{title}</h3>
    <p class="text-black text-pretty text-sm">
      {description}
    </p>
  </div>
</Card>
