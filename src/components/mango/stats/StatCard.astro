---
import i18next from "i18next";
import { Trans } from "astro-i18next/components";

interface Props {
  value: number;
  plus?: boolean;
  title: string;
  description: string;
  icon: any;
}

const { value, title, description, icon:Icon , plus } = Astro.props;
---

<div class="w-full flex flex-col justify-center items-center start-card">
  <Icon class="text-secondary size-12 mb-3 md:mb-6 stroke-[1.5]" />
  <h3 class="text-primary font-bold text-lg md:text-xl capitalize md:mb-3 text-center">
    {title}
  </h3>
  <p class="text-black text-balance text-center text-sm md:text-base">
    <strong class="tabular-nums" data-count={value}>
      {plus && "+"}
      {Intl.NumberFormat(i18next.language ?? "en", { minimumIntegerDigits: 2 }).format(value)}
    </strong>
    <Trans i18nKey={description}>
      Description <br />
    </Trans>
  </p>
</div>